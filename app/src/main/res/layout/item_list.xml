<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_background_card_plante"
    android:layout_margin="16dp"
    >

    <ImageView
        android:id="@+id/image_plante"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/rounded_background_card_plante"
        android:layout_marginLeft="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name_plante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Nom Plante"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/famille_plante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Famille" />
    </LinearLayout>
</LinearLayout>